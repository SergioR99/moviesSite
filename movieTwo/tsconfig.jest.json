{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["jest", "node"]
    },
    "include": ["src"]
}